root = true

###########################################################
; common
###########################################################

[*]
charset = utf-8

end_of_line = LF
insert_final_newline = true
trim_trailing_whitespace = true

indent_style = space
indent_size = 4

###########################################################
; make
###########################################################

[{Makefile,makefile}]
indent_style = tab

###########################################################
; markdown
###########################################################

[*.md]
trim_trailing_whitespace = false

###########################################################
; golang
###########################################################

[{*.go,go.mod}]
indent_style = tab

###########################################################
; YAML
###########################################################

[*.{yaml,yml}]
indent_size = 2
indent_style = space

###########################################################
; JSON
###########################################################

[*.json]
indent_size = 2
indent_style = space
